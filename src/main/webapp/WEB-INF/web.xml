<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--DEMO Management -->
    <servlet>
        <servlet-name>DemoForm</servlet-name>
        <jsp-file>/admin/demo/form.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoForm</servlet-name>
        <url-pattern>/demo-form</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FormCategory</servlet-name>
        <jsp-file>/admin/category/form.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormCategory</servlet-name>
        <url-pattern>/categories/form</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DemoList</servlet-name>
        <jsp-file>/admin/demo/list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoList</servlet-name>
        <url-pattern>/demo-list</url-pattern>
    </servlet-mapping>
    <!--END DEMO Management -->
    <!--CATEGORY Management -->
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/delete</url-pattern>
    </servlet-mapping>
    <!-- END CATEGORY Management -->
    <!-- PRODUCT Management -->
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.product.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/admin/products/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.baitap4.controller.admin.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>
    <!-- END PRODUCT Management -->
</web-app>